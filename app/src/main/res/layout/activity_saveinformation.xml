<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/ic_bg"

    android:orientation="horizontal"
    tools:context=".SaveInformationActivity">

    <LinearLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/iv_backward"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:ellipsize="none"
            android:singleLine="true" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ellipsize="marquee"
            android:gravity="center_horizontal|center"
            android:singleLine="true"
            android:text="个人信息 "
            android:textColor="#000"
            android:textSize="34dp" />

        <Button
            android:id="@+id/tv_forward"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="#00ffffff"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:text="保存"
            android:textColor="#f07da8"
            android:textSize="18dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/user_name"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/title"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/white"

            android:gravity="center_vertical"
            android:text="用户名"
            android:textColor="#000"></TextView>

        <EditText
            android:id="@+id/title_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:textColor="#999"

            android:gravity="center_vertical|right"
            android:layout_marginRight="5dp"
            android:textSize="20sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/arrow_more" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/student"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/user_name"
        android:background="@android:color/white"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingTop="10dp"
        android:gravity="center_vertical"
        android:paddingRight="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="60dp"
            android:background="@android:color/white"
            android:text="学号"
            android:textColor="@android:color/black" />

        <EditText
            android:id="@+id/student_id"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:textColor="#999"

            android:gravity="center_vertical|right"
            android:layout_marginRight="5dp"
            android:textSize="20dp" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/arrow_more" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/mail"

        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/student"
        android:background="@android:color/white"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:gravity="center_vertical"
        android:paddingTop="10dp"
        android:paddingRight="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="60dp"
            android:background="@android:color/white"
            android:text="邮箱"
            android:textColor="@android:color/black" />

        <EditText
            android:id="@+id/mail_id"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:textColor="#999"

            android:gravity="center_vertical|right"
            android:layout_marginRight="5dp"
            android:textSize="20dp" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/arrow_more" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/phone"

        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/mail"
        android:background="@android:color/white"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingTop="10dp"
        android:paddingRight="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="60dp"
            android:background="@android:color/white"
            android:text="手机号码"
            android:textColor="@android:color/black" />

        <EditText
            android:id="@+id/phone_id"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_vertical|right"
            android:textColor="#999"

            android:layout_marginRight="5dp"
            android:textSize="20dp" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/arrow_more" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/phone"
        android:background="@android:color/white"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
android:gravity="center_vertical"
        android:paddingRight="15dp"
       >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:text="性别"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/edit_sex"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="#999"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/arrow_more"
            android:gravity="center_vertical|right"
            android:text="男"></TextView>


    </LinearLayout>
</RelativeLayout>